<h3>People you are friends with</h3>

<div class = "row">
    <div class = "col-9">
        <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Email</th>
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @friends.each do |friend| %>
                <tr>
                    <th scope="row"><%= friend.email%></th>
                    <td><%= friend.full_name%></td>
                    <td>
                        <%= link_to "Stop Following", unfriend_url(friend), class: "btn btn-sm btn-warning"%>
                        <%= link_to "View Profile", user_path(friend), class: "btn btn-sm btn-success" %>
                    </td>
                </tr>
            <% end %>
        </tbody>
        </table>
    </div>
</div>