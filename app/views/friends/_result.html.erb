<% if @friends_result %>
    <div class = "card card-header results-block">
        <table class = "col-md-12">
            <tbody>
                <% @friends_result.each do |friend| %>
                    <tr>
                        <td><strong>Name: </strong><%= friend.full_name %></td>
                        <td><strong>Email: </strong><%= friend.email %></td>
                        <td>
                            <strong>Profile: </strong><%= link_to "View Profile", "#", class: "btn btn-sm, btn-success" %>
                            <% if !current_user.friends.include?(friend) %>
                                <%= link_to "Add Friend", '#', class: "btn btn-xs btn-success" %>
                            <% else %>
                                <span class = "badge badge-secondary">
                                    You are friends
                                </span>
                            <% end %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
<% end %>
